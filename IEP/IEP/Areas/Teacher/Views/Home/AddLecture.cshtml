@model IEP.Areas.Teacher.Models.LectureViewModel

@using (Html.BeginForm("AddLecture", "Home", FormMethod.Post))
{
    @Html.HiddenFor(x => x.SubjectId)

    <div class="form-group">
        @Html.LabelFor(x => x.Title)
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.AvailableModules)
        @Html.DropDownListFor(x => x.ModuleId, Model.AvailableModules.Select(x => new SelectListItem { Text = x.Title, Value = x.Id.ToString() }), new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-default">Добавить лекцию</button>
}